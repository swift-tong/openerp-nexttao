<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!-- Expenses -->
        <record id="view_myexpenses_tree" model="ir.ui.view">
            <field name="name">re.expense.expense.tree</field>
            <field name="model">re.expense.expense</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <tree string="Expenses" colors="blue:state=='draft'">
                    <field name="user"/>
                    <field name="date"/>
                    <field name="instructions"/>
                    <field name="total_amount"/>
                    <field name="reception"/>
                </tree>
            </field>
        </record>

        <record id="view_myexpenses_form" model="ir.ui.view">
            <field name="name">re.expense.form</field>
            <field name="model">re.expense.expense</field>
            <field eval="25" name="priority"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Expenses Sheet" version="7.0">
                    <sheet>
                        <group>
                            <group>
                                <field name="user"/>
                                <field name="date"/>
                                <field name="department"/>
                            </group>
                            <group>
                                <field name="note"/>
                                <field name="reception"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="说明">
                                <field name="line_ids"
                                       context="{'currency_id': currency_id, 'default_analytic_account': context.get('analytic_account', '')}"
                                       modifiers="{'readonly': [['state', 'not in', ['draft']]]}"/>
                                <group>
                                    <div>
                                        <separator string="备注"/>
                                        <field name="note" placeholder="备注" modifiers="{}"/>
                                    </div>
                                    <group class="oe_subtotal_footer oe_right">
                                        <field name="total_amount" widget="monetary"
                                               options="{'currency_field': 'currency_id'}"
                                               class="oe_subtotal_footer_separator" modifiers="{'readonly': true}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="审核（批）">
                                <group>
                                    <group>
                                        <field name="user_create"/>
                                        <field name="date_create"/>
                                    </group>
                                    <group>
                                        <field name="user_check"/>
                                        <field name="date_check"/>
                                    </group>
                                    <group>
                                        <field name="user_cancel"/>
                                        <field name="date_cancel"/>
                                    </group>
                                    <group>
                                        <field name="user_commit"/>
                                        <field name="date_commit"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="myexpense_all" model="ir.actions.act_window">
            <field name="name">Expenses</field>
            <field name="res_model">re.expense.expense</field>
            <field name="view_type">form</field>
            <field name="view_id" ref="view_expenses_tree"/>
        </record>

        <menuitem id="myexpense" name="费用报销" parent="base.menu_management" action="myexpense_all"/>
    </data>
</openerp>
